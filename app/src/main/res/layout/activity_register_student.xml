<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateeqkhan.studentattendance.RegisterStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Student Name"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/rollNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Roll Number"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/dateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Date of Birth"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fatherName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Father Name"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="number"
            android:textSize="14dp" />


        <EditText
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="start"
            android:hint="Address"
            android:textAlignment="viewStart"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bloodGroup"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Blood Group"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/selectBloodGroup"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@android:drawable/alert_dark_frame"
                android:text="Select Blood Group"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/semester"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Semester"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/selectSemester"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@android:drawable/alert_dark_frame"
                android:text="Select Semseter"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/session"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Session"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/selectSession"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="@android:drawable/alert_dark_frame"
                android:text="Select Session"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addUser"
            android:text="Add"
            android:textSize="16dp"
            android:textStyle="bold"/>


    </LinearLayout>


</ScrollView>
