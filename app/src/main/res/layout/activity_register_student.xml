<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateeqkhan.studentattendance.RegisterStudent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

   <EditText
       android:id="@+id/studentName"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:hint="Student Name"/>
    <EditText
        android:id="@+id/rollNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Roll Number"/>
    <EditText
        android:id="@+id/dateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Date of Birth"/>
    <EditText
        android:id="@+id/fatherName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Father Name"/>
    <EditText
        android:id="@+id/contactNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="number" />


    <EditText
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Adress"
        android:textAlignment="viewStart"
        android:gravity="start" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/bloodGroup"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Blood Group"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat" />

 <Button
     android:id="@+id/selectBloodGroup"
     android:layout_width="180dp"
     android:layout_height="60dp"
     android:textColor="@android:color/background_light"
     android:background="@android:drawable/alert_dark_frame"
     android:text="Select Blood Group"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/semester"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Semester"
            android:layout_marginLeft="8dp"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/selectSemester"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textColor="@android:color/background_light"
            android:background="@android:drawable/alert_dark_frame"
            android:text="Select Semseter" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/session"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Session"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat" />
        <Button
            android:id="@+id/selectSession"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textColor="@android:color/background_light"
            android:background="@android:drawable/alert_dark_frame"
            android:text="Select Session"/>
    </LinearLayout>
    <Button
        android:id="@+id/button_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="addUser"
        android:text="Add" />


</LinearLayout>


</ScrollView>
