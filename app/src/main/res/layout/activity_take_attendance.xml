<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.mateeqkhan.studentattendance.TakeAttendance">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:mcv_calendarMode="week"
        app:mcv_selectionColor="#00F"
        app:mcv_showOtherDates="all" />


    <TextView
        android:id="@+id/smstr"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="167dp"
        android:text="Semester"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/sctng"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/smstr"
        android:layout_alignStart="@+id/smstr"
        android:layout_below="@+id/smstr"
        android:layout_marginTop="11dp"
        android:text="Session"
        app:layout_constraintTop_toBottomOf="@+id/smstr"
        tools:layout_editor_absoluteX="39dp" />


    <Button
        android:id="@+id/slcsmstr"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:layout_alignBaseline="@+id/smstr"
        android:layout_alignBottom="@+id/smstr"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/smstr"
        android:layout_toRightOf="@+id/smstr"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Select Semester"
        android:textColor="@android:color/background_light"
        android:textSize="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/smstr"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/slccls"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/sctng"
        android:layout_alignBottom="@+id/sctng"
        android:layout_alignLeft="@+id/slcsmstr"
        android:layout_alignStart="@+id/slcsmstr"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Select Session"
        android:textColor="@android:color/background_light"
        android:textSize="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/sctng"
        app:layout_constraintTop_toBottomOf="@+id/slcsmstr" />


    <TextView
        android:id="@+id/dat"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:layout_alignTop="@+id/slcsmstr"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/slcsmstr"
        android:layout_toRightOf="@+id/slcsmstr"
        android:text="Date"
        app:layout_constraintStart_toEndOf="@+id/slcsmstr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/str"
        android:layout_width="60dp"
        android:layout_height="30dp"

        android:layout_alignLeft="@+id/dat"
        android:layout_alignStart="@+id/dat"
        android:layout_below="@+id/dat"
        android:text="Strength"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="365dp" />

    <TextView
        android:id="@+id/prst"
        android:layout_width="59dp"
        android:layout_height="29dp"

        android:layout_alignLeft="@+id/str"
        android:layout_alignStart="@+id/str"
        android:layout_below="@+id/str"
        android:text="present"
        app:layout_constraintTop_toBottomOf="@+id/str"
        tools:layout_editor_absoluteX="222dp" />

    <TextView
        android:id="@+id/abslv"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/str"
        android:layout_alignStart="@+id/str"
        android:layout_below="@+id/prst"
        android:text="Abs/Leave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/prst"
        app:layout_constraintVertical_bias="0.119" />

    <EditText
        android:id="@+id/edtdat"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_above="@+id/edtstr"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/edtstr"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/slcsmstr"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="0"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtprst"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/smstr"
        android:gravity="center"
        android:hint="zero"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_above="@+id/lvNotes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:hint="0"
        android:textSize="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/lvNotes"
        />

    <ListView
        android:id="@+id/lvNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/abslv"
        android:layout_marginTop="10dp" />


</RelativeLayout>


